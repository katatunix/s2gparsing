<?xml version="1.0" encoding="utf-8"?>

<Makefile>

	<Solution Path="win32.sln" />

	<CommonGccConfig>
		<GccConfig Name="armeabi-v7a">
			<Macro Name="SYSTEM_USER"				Value="$(USER)" />
			<Macro Name="INVALID_MACRO" 			Value="aaaaa$(HOMEzzz" />
			<Macro Name="KATA" 		Value="common1" CommonValue="common2"
																ReleaseValue="release" DebugValue="debug" />
			<Macro Name="LOOP1" 			Value="$(LOOP2)" />
			<Macro Name="LOOP2" 			Value="$(LOOP1)" />
			<Macro Name="LOOP3" 			Value="$(LOOP3)" />
			<Macro Name="MAIN_PROJECT" 						Value="main" />
			<Macro Name="GENERATE_DSYM"						Value="True" />

			<Macro Name="ANDROID_NDK_PATH" 		Value="$(ANDROID_NDK_HOME)" />
			<Macro Name="ANDROID_PLATFORM" Value="android-14"/>
			<Macro Name="TYPES_OF_FILES_TO_BE_COMPILED"	Value="cpp;cc;c" />

			<Macro Name="TOOLCHAIN"
				   Value="$(ANDROID_NDK_PATH)/toolchains/arm-linux-androideabi-4.9/prebuilt/darwin-x86_64/bin/arm-linux-androideabi-" />
			<Macro Name="CC" Value="$(TOOLCHAIN)gcc" />
			<Macro Name="CPP" Value="$(TOOLCHAIN)g++"/>
			<Macro Name="LS" Value="$(TOOLCHAIN)ar"/>
			<Macro Name="LD" Value="$(TOOLCHAIN)ld"/>
			<Macro Name="OBJCOPY" Value="$(TOOLCHAIN)objcopy"/>
			<Macro Name="STRIP" Value="$(TOOLCHAIN)strip"/>

			<Macro Name="CFLAGS" Value="-base1 -base2 -flag-arm7" ReleaseValue="-flag-release" DebugValue="-flag-debug" />
		</GccConfig>

		<GccConfig Name="x86">
			<Macro Name="SYSTEM_USER" Value="$(USER)"/>
			<Macro Name="INVALID_MACRO" Value="aaaaa$(HOMEzzz"/>
			<Macro Name="KATA" Value="common1" CommonValue="common2" ReleaseValue="release" DebugValue="debug"/>
			<Macro Name="LOOP1" Value="$(LOOP2)"/>
			<Macro Name="LOOP2" Value="$(LOOP1)"/>
			<Macro Name="LOOP3" Value="$(LOOP3)"/>
			<Macro Name="MAIN_PROJECT" Value="main"/>
			<Macro Name="GENERATE_DSYM" Value="True"/>

			<Macro Name="ANDROID_NDK_PATH" Value="$(ANDROID_NDK_HOME)"/>
			<Macro Name="ANDROID_PLATFORM" Value="android-14"/>
			<Macro Name="TYPES_OF_FILES_TO_BE_COMPILED" Value="cpp;cc;c"/>

			<Macro Name="TOOLCHAIN"
				   Value="$(ANDROID_NDK_PATH)/toolchains/x86-4.9/prebuilt/darwin-x86_64/bin/i686-linux-android-"/>
			<Macro Name="CC" Value="$(TOOLCHAIN)gcc"/>
			<Macro Name="CPP" Value="$(TOOLCHAIN)g++"/>
			<Macro Name="LS" Value="$(TOOLCHAIN)ar"/>
			<Macro Name="LD" Value="$(TOOLCHAIN)ld"/>
			<Macro Name="OBJCOPY" Value="$(TOOLCHAIN)objcopy"/>
			<Macro Name="STRIP" Value="$(TOOLCHAIN)strip"/>

			<Macro Name="CFLAGS" Value="-base1 -base2 -flag-x86" ReleaseValue="-flag-release -flag-release-x86"
				   DebugValue="-flag-debug-x86"/>
		</GccConfig>
	</CommonGccConfig>

	<Project Name="apple" UseS2GFile="true">
		<Macro Name="USE_SPECIFIC_OUTPUT_NAME" Value="apple2" />
		<Macro Name="USE_ADDITIONAL_INCLUDE_DIRECTORIES_FROM_VS" Value="true" />
		<Macro Name="USE_EXCLUDEFROMBUILD_VS_FLAG" Value="true" />

		<Macro Name="INCLUDE_PATHS" Value="
									../../inc/1
									../../inc/2
									../../inc/3
									" />
		<Macro Name="DEFINES" 	CommonValue="YEAH=common USE_SOMETHING"
			   DebugValue="YEAH=debug AHIHI" ReleaseValue="YEAH=release AHIHI"	/>

		<MSVCConfiguration 	Debug="Debug" Release="Release" />
		<Macro Name="SRC" Value="src" />

		<AddSourceFileToProject>
			<File Name="../../$(SRC)/source100.cpp" />
			<File Name="" />
			<File Name="../../src/source101.cpp" />
		</AddSourceFileToProject>

		<Ignore>
			<File Name="" />
			<File Name="../../src/source102.cpp" />
			<Filter Name="ex" />
		</Ignore>

		<UnityBuilds>
			<Custom Name="Func.cpp">
				<Filter Name="Func" AddOnlyFilesThatMatch="*.cpp" recursive="0"/>
			</Custom>
			<Custom Name="Templates.c">
				<Filter Name="Templates" AddOnlyFilesThatMatch="*.c" recursive="0"/>
			</Custom>
			<AutoGenerated UnityBuildsNumber="3" >
				<ExcludeFileFromUnityBuild Name="../../src/source103.cpp"/>
			</AutoGenerated>
		</UnityBuilds>

		<Macro Name="LDFLAGS" Value="" />
		<Macro Name="CFLAGS" Value="-fvisibility=hidden -fno-exceptions" />
		<Macro Name="CPPFLAGS" Value=""/>

		<Macro Name="LINK_PATHS" Value="" />

		<FileSpecific>
			<File Name="source1*.cpp" CFLAGS="-spec1 -spec2 -spec3"/>
			<File Name="source2.cpp" CFLAGS="-spec1 -spec2"/>
		</FileSpecific>
	</Project>

	<Project Name="banana" UseS2GFile="true">
		<Macro Name="USE_SPECIFIC_OUTPUT_NAME" Value="banana2"/>
		<Macro Name="USE_ADDITIONAL_INCLUDE_DIRECTORIES_FROM_VS" Value="true"/>
		<Macro Name="USE_EXCLUDEFROMBUILD_VS_FLAG" Value="true"/>

		<Macro Name="INCLUDE_PATHS" Value="
									../../inc/1
									../../inc/2
									"/>
		<Macro Name="DEFINES" CommonValue="BANANA"
			   DebugValue="BANANA_DEBUG" ReleaseValue="BANANA_RELEASE"/>

		<MSVCConfiguration Debug="Debug" Release="Release"/>

		<AddSourceFileToProject>
			<File Name="../../src/source100.cpp"/>
			<File Name=""/>
			<File Name="../../src/source101.cpp"/>
			<File Name="../../src/ass1.s"/>
			<File Name="../../src/ass2.s"/>
		</AddSourceFileToProject>

		<Ignore>
			<File Name=""/>
			<File Name="../../src/source102.cpp"/>
			<Filter Name="ex"/>
		</Ignore>

		<UnityBuilds>
			<AutoGenerated UnityBuildsNumber="5">
				<ExcludeFileFromUnityBuild Name="../../src/source8.cpp"/>
				<ExcludeFileFromUnityBuild Name="../../src/source9.cpp"/>
			</AutoGenerated>
		</UnityBuilds>

		<Macro Name="LDFLAGS" Value=""/>
		<Macro Name="CFLAGS" Value="-flag1 -flag2" DebugValue="-flag-debug" ReleaseValue="-flag-release"/>
		<Macro Name="CPPFLAGS" Value=""/>

		<Macro Name="LINK_PATHS" Value=""/>

		<FileSpecific>
			<File Name="ass1.s" CFLAGS="-ass-flag-a -ass-flag-b"/>
			<File Name="ass2.s" CFLAGS="-ass-flag-a -ass-flag-b -ass-flag-c -ass-flag-d"/>
		</FileSpecific>
	</Project>

	<Project Name="kaka" UseS2GFile="true" />

</Makefile>
